{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "ES6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "declaration": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"]
  },
  "include": ["src", "styled.d.ts"],
  "exclude": ["node_modules"]
}
